<!DOCTYPE html>
<html>
<head>
	<title>Birthday SMS</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
	<script type="text/javascript" src="javascripts/birthday.js"></script>
</head>
<body ng-app="birthdayApp">
  <div class="container" ng-controller="birthdayController" >
    <div class="col-md-4 col-md-offset-4" style="border: 3px solid skyblue; margin-top:50px;box-shadow: 5px 5px 5px 5px;padding: 20px; border-radius: 3%">
      <form class="form-group">
        <h1 style="text-align: center">Birthday Details</h1>
        <label>Name :</label>
        <input class="form-control" type="text" ng-model="birth.name">
        <label>Mobile :</label>
        <input class="form-control" type="text" ng-model="birth.mobile">
        <label>Email :</label>
        <input class="form-control" type="email" ng-model="birth.email">
        <label>Date of Birth :</label>
        <input class="form-control" type="date" ng-model="birth.dob">

        <br>
        <br>
        <button class="btn btn-info" style="margin-left: 40%" ng-click="saveBirthday(birth)">Add</button>
      </form>
    </div>
  </div>
  <br>
  <br>
  <div class="container">
    <br>
    
      <ul class="nav nav-pills" class="col-md-4 col-md-offset-4">
            <li class="active"><a data-toggle="pill" href="#today" >TODAY</a></li>
            <li><a data-toggle="pill" href="#recent" >RECENT</a></li>
        </ul>
    </div>
    <div class="tab-content">
      <div id="today"class="tab-pane fade in active col-md-12" style="margin-top: 100px" ng-controller="birthdayController" >
        <h1 style="text-align: center">Today Birthday's </h1>
        <br>
        <table class="table table-striped" style="border:2px solid skyblue;box-shadow: 10px 10px 10px 10px;padding: 20px; border-radius: 1%">
        <thead>
          <tr>
            <th>Name</th>
            <th>Mobile</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Email</th>
            <th>SMS</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="birth in born">
            <td>{{birth.name}}</td>
            <td>{{birth.mobile}}</td>
            <td>{{birth.email}}</td>
            <td>{{birth.dob}}</td>
            <td>
              <button class="btn btn-info" ng-click="email(birth)">EMAIL</button>
            </td>
            <td>
              <button class="btn btn-info" ng-click="sms()">SMS</button>
            </td>
          </tr>
        </tbody>
      </table>
    
    </div>
    <div id="recent" class="container tab-pane fade" style="margin-top: 100px" ng-controller="birthdayController1">
      <br>
      <h1 style="text-align: center">Recent birthdays</h1>
      <br>
        <table class="table table-striped" style="border:2px solid skyblue;box-shadow: 10px 10px 10px 10px;padding: 20px; border-radius: 1%">
        <thead>
          <tr>
            <th>Name</th>
            <th>Mobile</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Message</th>
            <th>Update</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="birth in born">
            <td>{{birth.name}}</td>
            <td>{{birth.mobile}}</td>
            <td>{{birth.email}}</td>
            <td>{{birth.dob}}</td>
            <td>
              
              <i class="btn btn-primary glyphicon glyphicon-envelope" ng-click="email()"></i>
              <i class="btn btn-info" ng-click="sms()">SMS</i>
            </td>
            <td>
              <i class="btn btn-primary glyphicon glyphicon-edit" ng-hide="editUser" ng-click="editData(); editUser=true"></i>
               <i class="btn btn-success glyphicon glyphicon-ok" ng-show="editUser" ng-click="updateData(users); editUser=false"></i>
  
                <i class="btn btn-danger glyphicon glyphicon-trash" ng-click="removeData(birth)"></i>
            </td>
          </tr>
        </tbody>
      </table>     
    </div>

      
  </div>
</body>
</html>